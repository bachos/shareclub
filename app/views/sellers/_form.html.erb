<div id='severity-form' class='grid_12 boxit page'>
  <%= form_for @seller, :html => { :class => 'validate' } do |f| %>

    <% if @seller.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@seller.errors.count, "error") %> prohibited this seller from being saved:</h2>
        <ul>
          <% @seller.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
	
    <p>
      <%= f.label 'Nombre del vendedor' %><br />
      <%= f.text_field :name, :class => 'required', :placeholder => 'Nombre...', :autocomplete => :off %>
    </p>
    <p>
      <%= f.label 'Telefono' %><br />
      <%= f.text_field :phone, :class => 'required number', :placeholder => 'Telefono...', :autocomplete => :off %>
    </p>
    <p>
      <%= f.label 'Correo electronico' %><br />
      <%= f.email_field :email, :placeholder => 'Correo...', :autocomplete => :off %>
    </p>
    <%= form_actions do %>
      <%= button "Guardar Vendedor", :class => 'success' %>
      <%= button "Cancelar", :class => 'warning cancel' %>
    <% end %>
<% end %>
</div>
